<ul class="track-list">
    {{#each tracks}}
    <li>
        <a href="{{ this.url }}">
            <div class="summary">{{ distance this.distance 2 }} km</div>
            <div class="summary">{{ time this.time }}</div>
            <div class="summary">{{ pace this }}</div>
            <time datetime="{{ this.date }}">{{ date this.date }}</time>
            {{ this.name }}<br/>
            {{ this.location }}
            <div class="row"></div>
        </a>
    </li>
    {{/each}}
</ul>